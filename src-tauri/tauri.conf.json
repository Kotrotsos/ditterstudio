{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Ditter",
  "version": "1.0.0",
  "identifier": "com.ditter.tool",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:8000",
    "beforeDevCommand": "python3 -m http.server 8000",
    "beforeBuildCommand": "node scripts/build.js"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Ditter",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
